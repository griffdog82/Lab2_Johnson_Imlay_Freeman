<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lab2_Johnson_Imlay_Freeman</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Lab2_Johnson_Imlay_Freeman.styles.css" asp-append-version="true" />
</head>
<body>

    @* This header block is going to check what user type logged in and display the corresponding navbar *@
    <header>
        @{
            var userRole = Context.Session.GetString("UserRole");  /* Get role from session */
        }
        @if (userRole == "Admin")
        {
            @Html.Partial("_NavbarAdmin")
        }
        else if (userRole == "Faculty")
        {
            @Html.Partial("_NavbarFaculty")
        }
        else if (userRole == "RepOfBusiness")
        {
            @Html.Partial("_NavbarBusinessPartner")
        }
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Lab2_Johnson_Imlay_Freeman - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @using Microsoft.AspNetCore.Http
    @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

    @if (HttpContextAccessor.HttpContext.Session.GetString("Username") != null)
    {
        <p>Welcome, @HttpContextAccessor.HttpContext.Session.GetString("Username")!</p>
        <a href="/Index?handler=Logout">Logout</a> <!-- ✅ Directly calls logout handler -->
    }
    
    @* TODO: Remove the Session Indicator method below*@
    @if (HttpContextAccessor.HttpContext.Session.GetString("Username") != null)
    {
        <p>Session Debug: @HttpContextAccessor.HttpContext.Session.GetString("Username")</p>
        <a href="/Index?handler=Logout">Logout</a>
    }
    else
    {
        <p>Session Debug: No user session detected.</p>
    }


</body>
</html>