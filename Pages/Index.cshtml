@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="col-md-6">
        <div class="card shadow-lg p-4">
            <div class="text-center">
                <img src="~/images/breaking_bad.png" alt="Breaking Bad Logo" height="80" class="mb-3">  @* Added the breaking bad logo *@
                <h2 class="fw-bold">Welcome</h2>
                <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
            </div>

            <form method="post">
                <div class="form-group">
                    <label asp-for="Username" class="form-label fw-bold">Username</label>
                    <input asp-for="Username" class="form-control" placeholder="Enter your username">
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="form-label fw-bold">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password">
                </div>

                <button type="submit" class="btn btn-success btn-block mt-3">Login</button>  @*  Made button green to match breaking bad log *@o

                @if (ViewData["LoginMessage"] != null)
                {
                    <div class="alert alert-danger mt-3">
                        @ViewData["LoginMessage"]
                    </div>
                }
            </form>
