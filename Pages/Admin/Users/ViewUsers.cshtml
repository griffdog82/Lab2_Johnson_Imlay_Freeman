@page
@model Lab2_Johnson_Imlay_Freeman.Pages.Admin.Users.ViewUsersModel
@{
    ViewData["Title"] = "View Users";
}

<h2>View Users</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>User Type</th>
            <th>Department</th>
            <th>Admin Type</th>
            <th>Business Partner</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.UserType</td>
                <td>@user.Department</td>
                <td>@user.AdminType</td>
                <td>@user.BusinessPartnerID</td>
                <td>
                    <a asp-page="EditUser" asp-route-id="@user.UserID" class="btn btn-warning">Edit</a>

                </td>
            </tr>
        }
    </tbody>
</table>
