@model Lab2_Johnson_Imlay_Freeman.Pages.Admin.Admin_DashboardModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4">
    <h2 class="mb-3 text-center">📌 Admin Dashboard</h2>

    <div class="list-group">
        <!-- Grants Section -->
        <a asp-page="/Admin/Grants/AddGrant" class="list-group-item list-group-item-action">
            💰 Add New Grant
        </a>

        <!-- Business Partners Section -->
        <a asp-page="/Admin/BusinessPartner/AddBusinessPartner" class="list-group-item list-group-item-action">
            🤝 Add New Business Partner
        </a>
        <a asp-page="/Admin/BusinessPartner/ViewBusinessPartners" class="list-group-item list-group-item-action">
            🤝 View Business Partners
        </a>

        <!-- Projects Section -->
        <a asp-page="/Admin/Projects/AddProject" class="list-group-item list-group-item-action">
            🏗️ Add New Project
        </a>
        <a asp-page="/Admin/Projects/ProjectList" class="list-group-item list-group-item-action">
            📋 View Current Projects
        </a>

        <!-- User Management -->
        <a asp-page="/Admin/Users/AddUser" class="list-group-item list-group-item-action">
            👤 Add New User
        </a>
        <a asp-page="/Admin/Users/ViewUsers" class="list-group-item list-group-item-action">
            👥 View Users
        </a>

        <!-- Inbox -->
        <a asp-page="/Admin/Messages/MessageList" class="list-group-item list-group-item-action">
            📩 Inbox
        </a>
    </div>
</div>
