@page  
@model Lab2_Johnson_Imlay_Freeman.Pages.BusinessPartner.ViewMessagesModel
@{
    ViewData["Title"] = "Inbox";
}

<div class="container mt-4">
    <h2 class="mb-3">📥 Inbox</h2>

    <div class="mb-3">
        <label for="senderFilter" class="form-label">Filter by Sender:</label>
        <form method="get" class="d-flex">
            <select name="senderId" id="senderFilter" class="form-select me-2" onchange="this.form.submit()">
                <option value="0" selected="@(Model.SelectedSenderID == null ? "selected" : null)">All Senders</option>
                @foreach (var sender in Model.Senders)
                {
                    <option value="@sender.UserID" selected="@(Model.SelectedSenderID == sender.UserID ? "selected" : null)">
                        @sender.FirstName @sender.LastName
                    </option>
                }
            </select>
        </form>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Sender</th>
                <th>Subject</th>
                <th>Received</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var message in Model.Messages)
            {
                <tr>
                    <td>@message.SenderName</td>
                    <td>@message.Subject</td>
                    <td>@message.Timestamp.ToString("g")</td>
                    <td>
                        <!-- ✅ FIXED: Passes messageID to ViewMessage -->
                        <a asp-page="ViewSingleMessage" asp-route-messageID="@message.MessageID" class="btn btn-info btn-sm">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-page="ComposeMessage" class="btn btn-success">📩 New Message</a>
</div>
