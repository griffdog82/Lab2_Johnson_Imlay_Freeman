@page
@model Lab2_Johnson_Imlay_Freeman.Pages.BusinessPartner.ViewGrantsModel
@{
    ViewData["Title"] = "Grants";
}

<div class="container mt-4">
    <h2 class="mb-3">💰 Available Grants</h2>

    <!-- Dropdown to Select Business Partner -->
    <form method="get">
        <label for="BusinessPartnerID" class="form-label">Select Business Partner:</label>
        <select asp-for="BusinessPartnerID" asp-items="Model.BusinessPartners" class="form-select" onchange="this.form.submit()">
            <option value="">-- Select Business Partner --</option>
        </select>
    </form>

    @if (Model.Grants.Count > 0)
    {
        <table class="table table-striped table-bordered mt-3">
            <thead class="table-dark">
                <tr>
                    <th>Grant Name</th>
                    <th>Category</th>
                    <th>Funding Source</th>
                    <th>Submission Date</th>
                    <th>Award Date</th>
                    <th>Amount ($)</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var grant in Model.Grants)
                {
                    <tr>
                        <td>@grant.GrantName</td>
                        <td>@grant.Category</td>
                        <td>@grant.FundingSource</td>
                        <td>@grant.SubmissionDate.ToString("yyyy-MM-dd")</td>
                        <td>@(grant.AwardDate?.ToString("yyyy-MM-dd") ?? "N/A")</td>
                        <td>@grant.Amount.ToString("C")</td>
                        <td>
                            <span class="badge @(grant.Status == "Approved" ? "bg-success" : grant.Status == "Pending" ? "bg-warning text-dark" : "bg-danger")">
                                @grant.Status
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="mt-3">No grants found for this Business Partner.</p>
    }

    <a asp-page="/BusinessPartner/BusinessPartner_Dashboard" class="btn btn-secondary">⬅ Back to Dashboard</a>
</div>